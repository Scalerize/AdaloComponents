{
  "displayName": "Radar Chart",
  "defaultWidth": 300,
  "defaultHeight": 300,
  "resizeX": true,
  "resizeY": true,
  "components": "./index.js",
  "icon": "./thumbnail.png",
  "props": [
    {
      "name": "data",
      "displayName": "Data Source",
      "type": "list",
      "listControl": {
        "filter": true,
        "sort": true,
        "limit": true,
        "advancedOptions": true
      }
    },
    {
      "name": "maxValue",
      "displayName": "Max Value",
      "type": "number",
      "default": 100,
      "control": { "type": "slider", "min": 1, "max": 1000 }
    },
    {
      "name": "levels",
      "displayName": "Grid Levels",
      "type": "number",
      "default": 5,
      "control": { "type": "slider", "min": 1, "max": 10 }
    },
    {
      "name": "showDots",
      "displayName": "Show Dots",
      "type": "boolean",
      "default": true
    },
    {
      "name": "dotRadius",
      "displayName": "Dot Radius",
      "type": "number",
      "default": 3,
      "enabled": { "showDots": true },
      "control": { "type": "slider", "min": 1, "max": 10 }
    },
    {
      "name": "showLabels",
      "displayName": "Show Category Labels",
      "type": "boolean",
      "default": true
    },
    {
      "name": "labelColor",
      "displayName": "Label Color",
      "type": "color",
      "default": "#333333",
      "enabled": { "showLabels": true },
      "style": true
    },
    {
      "name": "labelFontSize",
      "displayName": "Label Font Size",
      "type": "number",
      "default": 12,
      "enabled": { "showLabels": true },
      "control": { "type": "slider", "min": 6, "max": 24 },
      "style": true
    },
    {
      "name": "gridColor",
      "displayName": "Grid Line Color",
      "type": "color",
      "default": "#C0C0C0",
      "style": true
    },
    {
      "name": "gridLineWidth",
      "displayName": "Grid Line Width",
      "type": "number",
      "default": 1,
      "control": { "type": "slider", "min": 1, "max": 5 },
      "style": true
    },
    {
      "name": "strokeWidth",
      "displayName": "Series Line Width",
      "type": "number",
      "default": 2,
      "control": { "type": "slider", "min": 1, "max": 10 },
      "style": true
    },
    {
      "name": "fillOpacity",
      "displayName": "Fill Opacity",
      "type": "number",
      "default": 0.2,
      "control": { "type": "slider", "min": 0, "max": 100, "step": 1 },
      "style": true
    },
    {
      "name": "color",
      "displayName": "Color",
      "type": "color",
      "default": "#3366CC",
      "style": true
    }
  ],
  "childComponents": [
    {
      "name": "point",
      "displayName": "Data Point",
      "role": "listItem",
      "reference": "data",
      "props": [
        {
          "name": "category",
          "displayName": "Category",
          "type": "text"
        },
        {
          "name": "value",
          "displayName": "Value",
          "type": "number"
        }
      ]
    }
  ]
}
